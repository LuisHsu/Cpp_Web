 <% include ../layout/head %>
<body>
	<div id="left">
		 <% include ../layout/header %>
	</div>
	<div id="main" works="*">
		<div id="header">
			<font size="10px"><%= work %></font>
			<div style="float:right;margin-top:38px">
				Order by:
				<input type="button" class=<%= Class_Latest %> value="Latest" />
				<input type="button" class=<%= Class_Download %> value="Download" />
			</div>
		</div>
		<div id="container">
			<% for(var i=0;i < indices.length; ++i){ %>
			<div class="imgWork" proj= <%= indices[i] %> >
				<img src="img/laptop-frame.png" style="z-index:999;width:440px;">
				<img class="Image" src= <%= pics[i] %> >
				<div class="Text">
					<div style="font-size: 2.5em"><%= titles[i] %></div><br/>
					<div style="font-size: 1.5em"><%= authors[i] %></div><br/>
					<div style="font-size: 1.5em"><%= subtitles[i] %></div><br/>
				</div>
				<div class="detail">
					<%= titles[i] %>ï¼š<%= descriptions[i] %>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</body> 

<style>
.imgWork {
	display:inline-block;
	position: relative;
	width:440px;
	height:300px;
	z-index: 30;
	cursor:pointer;
	background-color: #DB8775;
	padding: 10px;
	border-radius: 10px;
	margin: 10px;
}
.Image{
	width:300px;
	height: 185px;
	position:absolute;
	top:25px;
	left:79px;
}
.Text{
	text-align: left;
	padding: 10px;
	width:280px;
	height:165px;
	display:none;
	background-color:#8C4A32;
	position:absolute;
	z-index: 20;
	top: 25px;
	left:79px;
	opacity: 0.9;
}
.detail{
	padding:10px;
	top: 250px;
	position: absolute;
	color: #8C4A32;
	font-weight: bold;
}
.sortbutton{
	border-radius:10px;
	border-style:none;
	color:#8c564a;
	background-color:#ffdfc4;
}
.sortclicked{
	border-radius:10px;
	border-style:none;
	color:#ffffff;
	background-color:#bc550d;
}

#container{text-align:center;}
#header{
	margin:0px;
}
</style>
<script>
$( document ).ready(function() {
  $('.imgWork')
	.mouseenter(function(){
		$(this).children(".Image").css("z-index","10");
		var Text = $(this).children(".Text");
		$(Text).fadeIn("fast");		
	})
	.mouseleave(function(){
		var Text = $(this).children(".Text");
		$(Text).fadeOut("slow");		
		
	})
	.click(function(){
		window.location.href = 'detail?index='+$(this).attr('proj');
	});
});
$('.sortbutton').click(function(){
	window.location.href=window.location.href.split("order=")[0]+"order="+$(this).val();
});
$('.sortclicked').click(function(){
	window.location.href=window.location.href.split("order=")[0]+"order="+$(this).val();
});
</script>

</html>
